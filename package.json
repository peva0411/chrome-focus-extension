{
  "name": "focus-extension",
  "version": "1.0.0",
  "description": "Schedule-based website blocking Chrome extension with time budgets",
  "type": "module",
  "scripts": {
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern=tests/unit",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern=tests/integration --runInBand",
    "test:e2e": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern=tests/e2e --runInBand",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch --testPathPattern=tests/unit",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:debug": "node --inspect-brk --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand",
    "test:all": "npm run test && npm run test:e2e"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/chrome": "^0.0.253",
    "@types/jest": "^29.5.11",
    "@types/sinon": "^17.0.2",
    "@types/sinon-chrome": "^2.2.15",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "puppeteer": "^21.6.1",
    "sinon": "^17.0.1",
    "sinon-chrome": "^3.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "testTimeout": 90000
  }
}
